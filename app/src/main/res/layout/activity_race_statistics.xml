<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_race_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.db.chart.view.HorizontalBarChartView
        xmlns:chart="http://schemas.android.com/apk/res-auto"
        android:id="@+id/members_chores_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        chart:chart_axisThickness="1dp"
        chart:chart_axisColor="@color/gray"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chores_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/members_chores_bar_chart"
        android:visibility="gone"/>
</RelativeLayout>