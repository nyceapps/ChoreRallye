<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/chore_list_image"
        android:src="@drawable/chore_placeholder"
        android:layout_weight="1"
        android:layout_width="@dimen/rallye_item_width"
        android:layout_height="@dimen/rallye_item_height"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/chore_list_name"
        android:text="@string/layout_item_text_chore"
        android:textSize="@dimen/font_size_normal"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>
    <ImageView
        android:id="@+id/chore_reorder_handle"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reorder_black_24dp"/>
</LinearLayout>