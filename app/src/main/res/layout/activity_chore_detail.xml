<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/chore_image"
        android:layout_width="@dimen/rallye_item_width"
        android:layout_height="@dimen/rallye_item_height"
        android:layout_gravity="center"
        android:src="@drawable/chore_placeholder"/>
    <EditText
        android:id="@+id/chore_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/edittext_hint_name"/>
    <EditText
        android:id="@+id/chore_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:digits="0123456789"
        android:hint="@string/edittext_hint_value"/>
</LinearLayout>